generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         Role     @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  notes    Note[]
  progress Progress[]
  embeddings Embedding[]
}

enum Role {
  USER
  ADMIN
}

model Note {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  document  String
  page      Int
  content   String
  createdAt DateTime @default(now())
}

model Progress {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  document  String
  pagesRead Int      @default(0)
  minutes   Int      @default(0)
  date      DateTime @default(now())
}

model Embedding {
  id         String   @id @default(cuid())
  user       User?    @relation(fields: [userId], references: [id])
  userId     String?
  source     String
  chunk      String
  embedding  Json
  createdAt  DateTime @default(now())
}
